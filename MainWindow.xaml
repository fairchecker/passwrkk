<Window x:Class="passwrkk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:passwrkk"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="passwrkk" Height="500" Width="900" Background="Black">
    <Grid x:Name="MainGrid">
        <TextBlock Text="passwrkk" 
                   Foreground="White" 
                   Margin="326,10,326,371" 
                   FontSize="32" TextAlignment="Center" />
        <Button x:Name="CreateNewVaultButton" 
                Visibility="Visible" 
                Foreground="White" 
                Content="Create new vault" 
                Margin="362,192,362,221" 
                BorderBrush="PaleTurquoise" Background="DarkSlateGray" 
                Click="CreateNewVault"/>
        <Button x:Name="OpenVaultButton" 
                Visibility="Visible" 
                Foreground="White" 
                Content="Open an existing vault" 
                Margin="362,282,362,131" 
                BorderBrush="PaleTurquoise" Background="DarkSlateGray" 
                Click="OpenVault"/>
        
    </Grid>
</Window>
